<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- leanback color overrides that cannot be overwritten any other way -->
	<color name="lb_preference_item_category_text_color">@color/colorAccent</color>

	<style name="LeanbackAppTheme" parent="Theme.Leanback">

		<!-- main theme colors -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorSurface">@color/colorSurface</item>
		<item name="android:colorBackground">@color/colorBackground</item>

		<!--- leanback color overrides -->
		<item name="playbackProgressPrimaryColor">@color/colorPrimary</item>
		<item name="playbackProgressSecondaryColor">@color/colorAccent</item>

		<!-- image card -->
		<item name="imageCardViewStyle">@style/ImageCardViewStyle</item>
		<item name="imageCardViewInfoAreaStyle">@style/ImageCardInfoAreaStyle</item>
		<item name="imageCardViewTitleStyle">@style/ImageCardTitleStyle</item>

		<item name="browseTitleTextStyle">@style/BrowseTitleTetxtStyle</item>
	</style>

	<style name="ImageCardViewStyle" parent="Widget.Leanback.ImageCardViewStyle">
		<item name="cardBackground">?colorSurface</item>
	</style>

	<style name="ImageCardInfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
		<item name="android:background">?colorPrimary</item>
	</style>

	<style name="ImageCardTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle" />

	<style name="BrowseTitleTetxtStyle" parent="Widget.Leanback.Title.Text" />

</resources>
